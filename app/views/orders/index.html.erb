<% @orders.each do |order| %>
  <tr>
    <td><%= order.customer_id %></td>
    <td><%= order.orderitem %></td>
    <td><%= order.quantity %></td>
    <td><%= order.orderdate %></td>
    <td><%= link_to 'Show', customer_order_path([@customer, order]) %></td>
    <td><%= link_to 'Edit', edit_customer_order_path([@customer, order]) %></td>
    <td><%= link_to 'Destroy', customer_order_path([@customer, order]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

